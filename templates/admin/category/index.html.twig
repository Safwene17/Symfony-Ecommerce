{% extends "base.html.twig" %}

{% block title %}{{'adminCategoryIndex.title'|trans}}{% endblock %}

{% block body %}
    <h1 class="text-white">{{'adminCategoryIndex.title'|trans}}</h1>
    <hr class="hr" />
    <div class="d-flex gap-3 flex-column">
        {% include "_components/adminnav.html.twig" %}
        <div class="bg-body-tertiary p-1 rounded w-100">
            <table class="table m-0 table-striped align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{'adminCategoryIndex.name'|trans}}</th>

                        <th>Slug</th>
                        <th>{{'adminCategoryIndex.order'|trans}}</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in category %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>

                        <td>{{ category.slug }}</td>
                        <td>{{ category.CategoryOrder }}</td>
                        <td>
                            <a class="btn btn-outline-primary" href="{{ path('admin_category_edit', {id: category.id}) }}">{{'adminProductsIndex.update'|trans}}</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" href="{{ path('admin_category_delete', {id: category.id}) }}" onclick="return confirm('Are you sure?')">{{'adminProductsIndex.delete'|trans}}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}